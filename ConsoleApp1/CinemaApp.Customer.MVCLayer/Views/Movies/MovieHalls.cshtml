@model IEnumerable<CinemaApp.DomainEntity.Model.MovieHall>

@{ 
     Layout = "~/Views/Shared/LoginLayout.cshtml";
}

@{
    ViewBag.Title = "MovieHalls";
}

<h2>Movie Halls</h2>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.MovieHallId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.MovieDateTime)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.MovieHallId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MovieDateTime)
            </td>
            <td>
            </td>
        </tr>
    }

</table>
@using (Html.BeginForm())
{
    <div>
        @Html.Label("Movie Hall Id :")
        @Html.DropDownList("MovieHallId", null, htmlAttributes: new { @class = "form-control" , @style = "display:inline;margin-left:5px" })
        <input type="submit" value="Confirm" class="btn btn-default" style="display:inline"/>
    </div>

    @Html.ActionLink(" Movie List","MovieList",null,htmlAttributes:new { @class="fa fa-arrow-left"});
}

